<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.example.seonjae.with.WorkInfoActivity">

    <LinearLayout
        android:id="@+id/layoutWorkInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로젝트명"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/valueProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="업무명"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/valueWorkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="업무설명"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/valueWorkDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중요도"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/valueWorkPriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작일"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/valueStartDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료일"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/valueEndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/layoutRewriteWorkInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:visibility="invisible">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="프로젝트명"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/reProjectName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="업무명"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/reWorkName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="업무 설명"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <EditText
            android:id="@+id/reWorkDes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="중요도"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <org.adw.library.widgets.discreteseekbar.DiscreteSeekBar
            android:id="@+id/rePriority"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fbutton:dsb_progressColor="#FF007F"
            fbutton:dsb_rippleColor="#FFC6FF"
            fbutton:dsb_indicatorColor="#FF007F"
            fbutton:dsb_allowTrackClickToDrag="true"
            app:dsb_min="1"
            app:dsb_max="10"
            android:paddingTop="20dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="시작일"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/reStartDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="종료일"
            android:textStyle="bold"
            android:textSize="15dp"/>
        <TextView
            android:id="@+id/reEndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20dp"/>
        <info.hoang8f.widget.FButton
            android:id="@+id/btnEndDay"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fbutton:buttonColor="#FFB2D9"
            fbutton:shadowColor="#F361A6"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:text="종료일 선택" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btnRewrite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fbutton:buttonColor="#FFB2D9"
            fbutton:shadowColor="#F361A6"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:textStyle="bold"
            android:text="수정완료" />

        <info.hoang8f.widget.FButton
            android:id="@+id/btnCancle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            fbutton:buttonColor="#FFB2D9"
            fbutton:shadowColor="#F361A6"
            fbutton:shadowEnabled="true"
            fbutton:shadowHeight="5dp"
            fbutton:cornerRadius="5dp"
            android:text="취소" />
    </LinearLayout>

</RelativeLayout>
